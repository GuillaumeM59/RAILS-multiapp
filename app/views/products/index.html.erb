<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Brand</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Visuel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
        <% r=rand(0..255).to_s%>
        <% g=rand(0..255).to_s%>
        <% b=rand(0..255).to_s%>
        <%= content_tag(:tr, style:"background-color: rgba(#{r+","+g+","+b},0.5)") do %>


        <td><%= product.name %></td>
        <td><%= product.content %></td>
        <td><%= product.brand_id %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= link_to image_tag(product.visuel.thumb), image_path(product.visuel)%></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
