<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @brand.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @brand.address %>
</p>

<p>
  <strong>Place:</strong>
  <%= @brand.place %>
</p>

<p>
  <strong>Logo:</strong>
  <%= @brand.logo %>
</p>
<%if current_user.admin %>
<%= link_to 'Edit', edit_brand_path(@brand) %> |
<%end%>
<%= link_to 'Back', brands_path %>

<h2> Products list </h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Visuel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Product.all.each do |product| %>
      <% if product.brand_id == @brand.id %>
      <% r=rand(0..255).to_s%>
      <% g=rand(0..255).to_s%>
      <% b=rand(0..255).to_s%>
      <%= content_tag(:tr, style:"background-color: rgba(#{r+","+g+","+b},0.5)") do %>

        <td><%= product.name %></td>
        <td><%= product.content %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= link_to image_tag(product.visuel.thumb), image_path(product.visuel)%></td>
        <td><%= link_to 'Show', product %></td>
        <% if current_user.admin %>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
    <% end %>
    <% end %>
  </tbody>
</table>
